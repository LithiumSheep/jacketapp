<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:contentPadding="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weather_time"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="December 20, 3:30 PM" />

        <TextView
            android:id="@+id/weather_location"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/weather_time"
            tools:text="Seattle, WA" />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/weather_location"
            android:layout_marginTop="8dp"
            android:id="@+id/temperature_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="High temp 40"/>

        <TextView
            app:layout_constraintStart_toEndOf="@id/temperature_high"
            app:layout_constraintBaseline_toBaselineOf="@id/temperature_high"
            android:layout_marginStart="8dp"
            android:id="@+id/temperature_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Low temp 31"/>

        <TextView
            android:id="@+id/temperature_main"
            style="@style/TextAppearance.AppCompat.Display3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/temperature_high"
            tools:text="39\u00B0F" />

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/jacket_red" />

        <TextView
            android:id="@+id/weather_text"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/temperature_main"
            tools:text="Clouds - Windy" />

        <TextView
            android:id="@+id/jacket_text"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/weather_text"
            tools:text="Put on yo damn Jacket!" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>